@* Pages/Reference/Sellers.razor *@
@page "/reference/sellers"
@rendermode InteractiveServer
@using ComputerStore.Data
@using ComputerStore.Models
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext

<PageTitle>Продавцы</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5">Справочник продавцов</h1>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            @if (sellers.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ФИО</th>
                                <th>Телефон</th>
                                <th>Количество продаж</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var seller in sellers)
                            {
                                <tr>
                                    <td>@seller.FullName</td>
                                    <td>@seller.Phone</td>
                                    <td>
                                        <span class="badge bg-primary">@seller.Sales.Count</span>
                                    </td>
                                    <td>
                                        <a href="/reports?seller=@seller.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-graph-up me-1"></i>Отчет
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>Продавцы не найдены
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<Seller> sellers = new();

    protected override async Task OnInitializedAsync()
    {
        sellers = await DbContext.Sellers
            .Include(s => s.Sales)
            .OrderBy(s => s.LastName)
            .ToListAsync();
    }
}





